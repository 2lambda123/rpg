<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="BattleRound" table="battle_rounds">
        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>

        <field name="name" column="name"/>

        <field name="description" column="description"/>

        <field name="imageFilePath" column="image_file_path"/>

        <field name="type" column="type"/>

        <embedded name="type" class="ItemType"/>

        <many-to-one target-entity="ItemPrototype" field="itemPrototype">
            <join-column name="prototype_id"/>
        </many-to-one>

        <many-to-one target-entity="Character" field="creatorCharacter">
            <join-column name="creator_character_id"/>
        </many-to-one>

        <many-to-one target-entity="Character" field="ownerCharacter">
            <join-column name="owner_character_id"/>
        </many-to-one>

        <one-to-many field="turns" target-entity="BattleTurn" mapped-by="battle_round"/>

    </entity>
</doctrine-mapping>
