<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <embeddable name="App\Modules\Character\Domain\ValueObjects\Attributes">

        <field name="strength" column="strength" type="integer"/>
        <field name="agility" column="agility" type="integer"/>
        <field name="constitution" column="constitution" type="integer"/>
        <field name="intelligence" column="intelligence" type="integer"/>
        <field name="charisma" column="charisma" type="integer"/>
        <field name="unassigned" column="available_attribute_points" type="integer"/>

    </embeddable>

</doctrine-mapping>
