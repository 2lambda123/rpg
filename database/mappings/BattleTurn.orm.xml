<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="BattleTurn" table="battle_turn">
        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>

        <many-to-one target-entity="BattleRound" field="battle_round" />

        <many-to-one target-entity="Character" field="owner"  />

        <many-to-one target-entity="Character" field="target" />

        <one-to-many field="turns" target-entity="BattleTurn" mapped-by="battle_round" />

    </entity>
</doctrine-mapping>
