<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Modules\Battle\Domain\Entities\BattleRound" table="battle_rounds">

        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>

        <field name="battleId" column="battle_id" type="uuid"/>

        <many-to-one target-entity="App\Modules\Character\Domain\Entities\Character" field="attacker" />

        <many-to-one target-entity="App\Modules\Character\Domain\Entities\Character" field="defender" />

        <one-to-many field="turns" target-entity="BattleTurn" mapped-by="battle_round" />

        <field name="createdAt" type="datetime" column="created_at" nullable="true"/>
        <field name="updatedAt" type="datetime" column="updated_at" nullable="true"/>

    </entity>

</doctrine-mapping>
